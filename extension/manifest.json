{
    "manifest_version": 3,
    "name": "Research Assistant",
    "version": "1.0",
    "description": "AI-powered Research Assistant,                                                                      .",
    "icons": {
        "16": "icons/research-assistance.png",
        "32": "icons/research-assistance.png",
        "48": "icons/research-assistance.png",
        "128": "icons/research-assistance.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "sidePanel",
        "tabs"
    ],            
    "action": {
        "default_title": "Research Assistant",
        "default_icon": {
            "16": "icons/research-assistance.png",
            "32": "icons/research-assistance.png",
            "48": "icons/research-assistance.png",
            "128": "icons/research-assistance.png"
        }
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://localhost:8050/*",
        "<all_urls>"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    }
}